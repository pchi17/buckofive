<% content_for :title, 'Edit Account' %>
<div class="col-md-7 col-md-offset-1">
  <%= form_for current_user, url: profile_info_path, method: :patch do |f| %>
    <hr/>
    <%= render_error_message(current_user) %>
    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :name, class: 'sr-only' %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Submit Changes', class: 'btn btn-success btn-sm' %>
    </div>
    <hr/>
  <% end %>
</div>
