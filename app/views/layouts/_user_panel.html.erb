<% if logged_in? %>
  <%= current_user.name %>
  <%= link_to 'Log Out', logout_path ,method: :delete, class: 'btn btn-danger btn-block' %>
<% else %>
  <%= link_to 'Log In',  login_path,  class: 'btn btn-primary btn-block' %>
  <%= link_to 'Sign Up', signup_path, class: 'btn btn-primary btn-block' %>
<% end %>
