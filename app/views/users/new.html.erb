<% content_for :title, 'Sign Up' %>
<%= form_for @user do |f| %>
  <%= render 'shared/error_messages', object: f.object if @user.errors.any? %>
  <hr/>
  <div class="form-group">
    <%= f.label :name, class: 'sr-only' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <%= f.fields_for :account do |act| %>
    <div class="form-group">
      <%= act.label :password, class: 'sr-only' %>
      <%= act.password_field :password, class: 'form-control', placeholder: 'Password' %>
    </div>

    <div class="form-group">
      <%= act.label :password_confirmation, class: 'sr-only' %>
      <%= act.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.check_box :remember_me, checked: true %>
    <span>remember me on this computer</span>
  </div>

  <div class="form-group">
    <%= f.submit 'Create Account', class: 'btn btn-success' %>
  </div>
  <hr/>
<% end %>
