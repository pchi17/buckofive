<%= content_for :title, 'Polls Index' %>

<%= form_tag polls_path, id: 'poll-search-form', method: :get, remote: true do %>
  <div class="form-group">
    <%= label_tag :search_term, nil, class: 'sr-only' %>
    <div class="input-group">
      <%= text_field_tag :search_term, nil, class: 'form-control', placeholder: 'search for polls' %>
      <span class="input-group-btn">
        <%= submit_tag 'search', class: 'btn btn-default' %>
      </span>
    </div>
  </div>

  <div id="poll-table"><%= render 'polls/partials/poll_table'%></div>
<% end %>
