<% content_for :title, 'Profile' %>

<%= form_tag profile_path, id: 'poll-search-form', method: :get, remote: true do %>
  <div class="form-group">
    <%= label_tag :search_term, nil, class: 'sr-only' %>
    <%= text_field_tag :search_term, nil, class: 'form-control', placeholder: 'search for polls' %>
  </div>
  <div class="form-group profile-radio-buttons">
    <div class="btn-group btn-group-justified" data-toggle="buttons">
      <label class="btn btn-default">
        <%= radio_button_tag :filter, 'all' %>
        all polls
      </label>
      <label class="btn btn-default">
        <%= radio_button_tag :filter, 'created' %>
        created
      </label>
      <label class="btn btn-default">
        <%= radio_button_tag :filter, 'voted' %>
        voted
      </label>
      <label class="btn btn-default">
        <%= radio_button_tag :filter, 'commented' %>
        commented
      </label>
      <label class="btn btn-default">
        <%= radio_button_tag :filter, 'fresh' %>
        need my vote
      </label>
    </div>
  </div>
  <div class="form-group profile-search-submit">
    <%= submit_tag 'Search', class: 'btn btn-success btn-block' %>
  </div>

  <div id="poll-table"><%= render 'polls/partials/poll_table'%></div>
<% end %>
